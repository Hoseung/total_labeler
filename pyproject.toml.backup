[project]
name = "frame-property-labeler"
version = "0.1.0"
description = "Tkinter app for labeling frame images with numeric properties"
readme = "README.md"
requires-python = ">=3.8"
dependencies = [
  "pillow>=10.0.0",
]

[project.scripts]
frame-labeler = "frame_property_labeler.gui:main"
frame-labeler-analyze = "frame_property_labeler.analyze:main"

[tool.setuptools]
package-dir = {"" = "src"}

[tool.setuptools.packages.find]
where = ["src"]
include = ["frame_property_labeler*"]

[tool.uv]
package = true
